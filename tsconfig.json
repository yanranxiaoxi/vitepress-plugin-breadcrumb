{
	"compilerOptions": {
		"declaration": true, // 生成 .d.ts 文件
		"declarationDir": "dist/types", // 输出目录
		"outDir": "dist", // 输出目录
		"rootDir": "src", // 源码目录
		"module": "ESNext", // 模块类型
		"target": "ESNext", // 目标版本
		"esModuleInterop": true, // 支持 ES 模块
		"skipLibCheck": true, // 跳过库检查
		"strict": true // 启用严格模式
	},
	"include": ["src/**/*"] // 包含的文件
}
