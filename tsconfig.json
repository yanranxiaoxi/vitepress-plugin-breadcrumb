{
	"compilerOptions": {
		"declaration": true, // 生成 .d.ts 文件
		"declarationDir": "dist/types", // 输出目录
		"emitDeclarationOnly": true, // 仅生成声明文件
		"outDir": "dist", // 输出目录
		"rootDir": "src", // 源码目录
		"module": "ESNext", // 模块类型
		"target": "ESNext", // 目标版本
		"moduleResolution": "Node",
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true, // 支持 ES 模块
		"lib": ["ESNext", "DOM"],
		"types": ["vite/client"],
		"skipLibCheck": true, // 跳过库检查
		"strict": true // 启用严格模式
	},
	"include": ["src/**/*"] // 包含的文件
}
