		"./Breadcrumb.vue": "./src/Breadcrumb.vue"
	},
	"peerDependencies": {
		"vitepress": "^1.6.3",
		"vue": "^3.5.13"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"@typescript-eslint/parser": "^7.18.0",
		"eslint": "^8.57.1",
		"eslint-config-alloy": "^5.1.2",
		"eslint-plugin-unicorn": "^56.0.1",
		"husky": "^9.1.7",
		"lint-staged": "^15.4.3",
		"prettier": "^3.5.3",
		"typescript": "^5.8.2"
	},
	"scripts": {
		"init": "pnpm install && husky && pnpm run preinstall",
		"preinstall": "npx only-allow pnpm",
		"prepare": "husky || true",
		"fix": "eslint --cache --fix . && prettier --write ."
	},
	"lint-staged": {
		"*.{js,ts,mts}": "eslint --cache --fix",
		"*.{vue,js,ts,mts,md,css}": "prettier --write"
	}
